<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#091035"
    android:paddingTop="@dimen/_10sdp"
    tools:context=".MainActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_25sdp"
                android:paddingTop="@dimen/_5sdp"
                android:layout_height="@dimen/_30sdp"

                android:text="Tic Tac Toe"
                android:textStyle="bold"
                android:textColor="#774CBD"
                android:textSize="@dimen/_18sdp"
                android:background="#CCC0ED"
                android:textAlignment="center"
                tools:ignore="HardcodedText" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_190sdp"
                android:layout_marginTop="@dimen/_80sdp"
                android:backgroundTint="#41E813"
                android:text="RESTART"
                tools:ignore="HardcodedText"
                android:id="@+id/restart"
                android:layout_marginRight="@dimen/_10sdp"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_80sdp"
                android:layout_marginRight="@dimen/_200sdp"
                android:backgroundTint="#E81333"
                android:text="EXIT"
                tools:ignore="HardcodedText"
                android:id="@+id/exit"
                />
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp"
                android:columnCount="3"
                android:layout_marginTop="@dimen/_150sdp"
                android:paddingTop="@dimen/_15sdp"
                android:rowCount="3"
                android:background="@color/white"
                android:foregroundGravity="center"
                >

                <Button
                    tools:ignore="RtlHardcoded"
                    android:layout_marginLeft="@dimen/_35sdp"
                    android:onClick="check"
                    android:id="@+id/button1" />

                <Button

                    android:id="@+id/button2"
                    android:onClick="check"
                    android:layout_marginLeft="@dimen/_15sdp"
                    tools:ignore="RtlHardcoded" />

                <Button

                    android:id="@+id/button3"
                    android:onClick="check"
                    android:layout_marginLeft="@dimen/_15sdp"
                    tools:ignore="RtlHardcoded" />

                <Button
                    tools:ignore="RtlHardcoded"
                    android:onClick="check"
                    android:layout_marginLeft="@dimen/_35sdp"
                    android:id="@+id/button4" />

                <Button

                    android:id="@+id/button5"
                    android:onClick="check"
                    android:layout_marginLeft="@dimen/_15sdp"
                    tools:ignore="RtlHardcoded" />

                <Button

                    android:id="@+id/button6"
                    android:onClick="check"
                    android:layout_marginLeft="@dimen/_15sdp"

                    tools:ignore="RtlHardcoded" />

                <Button
                    android:id="@+id/button7"
                    android:layout_marginLeft="@dimen/_35sdp"
                    android:onClick="check"
                    tools:ignore="RtlHardcoded"
                    />

                <Button
                    android:id="@+id/button8"
                    android:onClick="check"
                    android:layout_marginLeft="@dimen/_15sdp"
                    tools:ignore="RtlHardcoded" />

                <Button
                    android:id="@+id/button9"
                    android:onClick="check"
                    android:layout_marginLeft="@dimen/_15sdp"
                    tools:ignore="RtlHardcoded" />

            </GridLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:text="Result"
                android:textSize="@dimen/_23sdp"
                android:layout_marginTop="@dimen/_350sdp"
                android:gravity="center"
                android:background="#69E4EF"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp"
                android:padding="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_400sdp"
                android:background="#69E4EF"
                android:text="  Player 1  :  \n\n\n  Player 2  :  "
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="@dimen/_13sdp"
                tools:ignore="HardcodedText" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_200sdp"
                android:layout_marginTop="@dimen/_430sdp"
                android:backgroundTint="#69E4EF"
                android:text="0"
                android:id="@+id/resx"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#69E4EF"
                android:layout_marginTop="@dimen/_482sdp"
                android:layout_marginLeft="@dimen/_200sdp"
                android:text="0"
                android:id="@+id/resy"
                />

        </RelativeLayout>
    </ScrollView>




</RelativeLayout>


